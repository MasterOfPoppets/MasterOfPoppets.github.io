{{> header}}

<div class="splash-container">
  <div class="splash">
    <h1 class="splash-head">Quantum</h1>
    <p>full stack web development</p>
  </div>
</div>

<div class="content-wrapper">
  <div class="content">
    <h2 class="content-header is-centre">Snappy info</h2>
    <div class="pure-g">
      <div class="is-centre pure-u-1 pure-u-md-1-3">
        <span class="content-service-icon fa-stack fa-2x">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-code-fork fa-stack-1x fa-inverse"></i>
        </span>
        <h3>One MEAN Developer</h3>
      </div>
      <div class="is-centre pure-u-1 pure-u-md-1-3">
        <span class="content-service-icon fa-stack fa-2x">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-laptop fa-stack-1x fa-inverse"></i>
        </span>
        <h3>Design and Conquer</h3>
      </div>
      <div class="is-centre pure-u-1 pure-u-md-1-3">
        <span class="content-service-icon fa-stack fa-2x">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-graduation-cap fa-stack-1x fa-inverse"></i>
        </span>
        <h3>Consultancy</h3>
      </div>
      <div class="pure-u-md-1-4"></div>
      <div class="pure-u-md-1-2">
        {{>hex test="HANDLE"}}
      </div>
    </div>
  </div>
  <div class="content ribbon">
    <h2 class="content-header is-centre">Clients</h2>
    <p>It doesn't help that I don't appear to have a creative bone in my body.</p>
  </div>
  <div class="content">
    <h2 class="content-header is-centre">Blog</h2>
    <div class="pure-g">
      {{#each collections.latestPosts}}
        <div class="pure-u-1 pure-u-lg-1-3">
          <h3><a href="{{link this.path}}">{{this.title}}</a></h3>
          <article>{{{this.excerpt}}}</article>
        </div>
      {{/each}}
    </div>
  </div>
</div>

{{> footer}}
